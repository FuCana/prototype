/* pages/mine/community/community.wxss */

page {
  background-color: #ececec;
}

.header {
  height: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  background-color: #fff;
}

.header image {
  height: 112rpx;
  width: 112rpx;
  margin: 14rpx 0 0 20rpx;
  border-radius: 6rpx;
}

.header_right {
  display: flex;
  flex-direction: column;
  margin-left: 26rpx;
  height: 100rpx;
  padding: 20rpx 0;
}

.name {
  line-height: 40rpx;
}

.location {
  color: #878787;
  font-size: 24rpx;
}

.middle {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.middle .item {
  width: 95%;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 3%;
  border-bottom: 1px solid #ececec;
  display: flex;
  flex-direction: row;
}

.item view:nth-child(1) {
  width: 20%;
  font-size: 26rpx;
}

.item view:nth-child(2) {
  width: 77%;
  color: #878787;
  font-size: 24rpx;
}

.Info{
    width:100%;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}
.Info image{
    width:40rpx;
    height:40rpx;
    margin: 10rpx auto;
}
.title{
    width: 97%;
    padding-left:3%;
    border:1px solid #ececec;
    height: 80rpx;
    line-height: 80rpx;
}
.tab_block{
    display: flex;
    flex-direction: row;
    height: 160rpx;
    font-size: 26rpx;
}
.block{
    display: flex;
    flex-direction: column;
    width: 33.3%;
    text-align: center;
}
.block view:nth-child(3){
    color: #48b0f7;
    margin: 10rpx 0;
}